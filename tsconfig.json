{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@components": ["./components"],
      "@context": ["./context"],
      "@enums": ["./enums"],
      "@interfaces": ["./interfaces"],
      "@pages": ["./pages"],
			"@styles": ["./styles/themes/default.ts"],
      "@utils": ["./utils"]
    }
  },
  "include": ["src", "tests/test-utils.tsx", "jest.config.cjs", "tests/*.tests.tsx", "stories/components/**/*.stories.tsx", "stories/stories-utils.tsx", "tests/common/coffee-amount-buttons.tests.tsx", "tests/common/header.tests.tsx", "tests/home/coffee-card.tests.tsx", "tests/home/coffee-list.tests.tsx", "tests/checkout/confirm-button.tests.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
